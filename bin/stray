#!/bin/bash
set -e

if [ "$1" = "label" ]
then
    if [ $# -lt 2 ]
        then
            echo "Not enough arguments supplied"
            exit 1
    fi

    if [ "$2" = "generate" ]
    then
        stray-label-generate "${@:3}"
    elif [ "$2" = "show" ]
    then
        stray-label-show "${@:3}"
    else
        echo "Incorrect verb"
    fi
elif [ "$1" = "model" ]
then
    if [ $# -lt 2 ]
        then
            echo "Not enough arguments supplied"
            exit 1
    fi
    if [ "$2" = "generate" ]
    then
        stray-model-generate "${@:3}"
    elif [ "$2" = "bake" ]
    then
        stray-model-bake "${@:3}"
    elif [ "$2" = "evaluate" ]
    then
        stray-model-evaluate "${@:3}"
    else
        echo "Incorrect verb"
    fi

elif [ "$1" = "studio" ]
then
    if [ $# -lt 2 ]
    then
        echo "Not enough arguments supplied"
        exit 1
    fi
    studio $2

else
    echo "No command supplied"
fi

